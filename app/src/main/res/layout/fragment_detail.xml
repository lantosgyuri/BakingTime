<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <Button
        android:id="@+id/detail_ingredients_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ingredients_button_margin_top"
        android:layout_marginBottom="@dimen/ingredients_button_margin_top"
        android:text="Ingredients"
        android:padding="@dimen/ingredient_button_text_padding"
        android:textColor="@android:color/white"
        android:background="@drawable/ingredient_button_bg"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/detail_fragment_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>