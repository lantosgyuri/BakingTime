<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/detail_step_padding"
    card_view:cardElevation="4dp"
    card_view:cardCornerRadius="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/detail_step_padding"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:id="@+id/detail_step_image"
            android:layout_width="@dimen/main_item_image_size"
            android:layout_height="@dimen/main_item_image_size" />

    <TextView
        android:id="@+id/detail_step_title_text"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/main_item_text_margin"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    </LinearLayout>

</android.support.v7.widget.CardView>